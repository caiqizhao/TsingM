<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/foot_bg"
    tools:context=".fragment.FootFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:background="#80ffffff">
        <ImageView
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_marginTop="40dp"
            android:background="@mipmap/foot_image"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/bushu_tx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="今日步数"
        android:gravity="center_horizontal"
        android:layout_marginTop="90dp"
        android:textSize="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>
    <TextView
        android:id="@+id/bushu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@id/bushu_tx"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorGrayBlack"
        android:textStyle="bold"
        android:textSize="50dp"
        android:text="556"/>
    <LinearLayout
        android:id="@+id/updata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/foot_ll"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/change"
            android:layout_toLeftOf="@id/change_food"/>
        <TextView
            android:id="@+id/change_foot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="同步步数"
            android:textColor="@color/colorBlue"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/updata"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/shoe"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/foot_process"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:background="@mipmap/foot_process"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/foot_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/bushu"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已耗能："/>
        <TextView
            android:id="@+id/foot_nengliang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:textStyle="bold"
            android:textSize="17dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  千卡"/>
    </LinearLayout>
</RelativeLayout>